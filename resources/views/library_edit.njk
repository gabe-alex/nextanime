
<form class="form-horizontal" method="post" action="/library/edit" role="form">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">{{ "Edit " if current_anime._pivot_status else "Add" }} {{ current_anime | display_title if current_anime.title else ""}}</h4>
  </div>
  <div class="modal-body">
    {{ csrfField | safe }}
    {% if current_anime.id %}
      <input type="hidden" name="anime" value="{{ current_anime.id }}" />
    {% else %}
      <div class="form-group">
        <label class="col-sm-2 control-label" for="anime">Anime</label>
        <div class="col-sm-10">
          <input class="form-control" id="anime_name" name="anime_name" type="text" autocomplete="off">
          <div id="live_search"></div>
          <input type="hidden" id="anime" name="anime" requred>
        </div>
      </div>
    {% endif %}
    <div class="form-group">
      <label class="col-sm-2 control-label" for="status">Status</label>
      <div class="col-sm-10">
        <select class="form-control" id="status" name="status" required>
          {% for name, label in status_types %}
            <option value="{{ name }}" {{ "selected" if current_anime._pivot_status==name else "" }} >{{ label }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="rating">Rating</label>
      <div class="col-sm-10">
        <input class="form-control" id="rating" name="rating" type="number" min="1" max="10" step="1" value="{{ current_anime._pivot_rating if current_anime._pivot_rating else "5" }}">
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
    {% if current_anime._pivot_status %}
        <input class="btn btn-danger" type="submit" name="remove" value="Remove" />
    {% endif %}
    <input class="btn btn-primary" type="submit" name="save" value='{{ "Save Changes" if current_anime.title else "Add" }}'>
  </div>
</form>

<script>
  function selectAnime(id, name) {
    $("#anime_name").prop('disabled', true);
    $('#live_search').html('');
    $('#anime_name').val(name);
    $('#anime').val(id);
  }

  $('#anime_name').keyup(function(){
    var searchQuery = $('#anime_name').val();
    if(searchQuery.length > 0) {
      $.getJSON('/search/' + encodeURIComponent(searchQuery), function (data) {
        var output = '<ul>';
        $.each(data, function (key, val) {
          var name = val.romaji_title || val.english_title || val.title;
          output += '<li>';
          output += '<a href="javascript:selectAnime(' + val.id + ', \'' + name + '\');">';
          output += name;
          output += '</a>';
          output += '</li>';
        });
        output += '</ul>';
        $('#live_search').html(output);
      });
    } else {
      $('#live_search').html('');
    }
  });
</script>
